</head>

<body>

    <% messages.forEach((message, index)=> { %>
        <h3>Message <%= index + 1 %>
        </h3>
        <ul>
            <li>
                <%= message.user %>
            </li>
            <li>
                <%= message.text %>
            </li>
            <li>
                <%= message.added %>
            </li>
        </ul>
        <a href="/msg/<%=index%>">view message</a>
        <% }); %>
